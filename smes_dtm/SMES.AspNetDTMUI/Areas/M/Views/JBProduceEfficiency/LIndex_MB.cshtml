@{
    Layout = "~/Areas/M/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/Areas/M/Styles/JBProduceEfficiency.css" rel="stylesheet" />
}
<body ng-app="APP" ng-controller="CTRL">
    <div class="main-left">
        <div class="module1 title">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="row">
                        <div class="col-xs-6">
                            @ViewBag.Title
                        </div>
                        <div class="col-xs-6">
                            <div id="ProducteWeek" class="week">@ViewBag.Week</div>
                            <div id="datetimes" class="date">{{clock}}</div>
                            <div id="ProducteDate" class="date" style="display: none">@ViewBag.Date</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="module2 bg-color-0">
            <div class="module2-body" style="text-align: center; vertical-align: middle">
                <div class="row">
                    <div class="col-xs-4" style="font-size: 24px;">
                        运行效率<br />%
                    </div>
                </div>
            </div>
        </div>

        <div class="module2 bg-color-0">
            <div class="module2-body" style="text-align: center; vertical-align: middle">
                <div class="row">
                    <div class="col-xs-4" style="font-size: 24px;">
                        台时产能
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="header-content exist-left">
        <div class="module1 title" style="background-color:#4D4D4D;height:100%">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;text-align:center;width:100%;">
                    <div class="row text-right" style="font-size:small;display:none">
                        <table align="right">
                            <tr>
                                <td>
                                    开始日期：
                                </td>
                                <td>
                                    <input id="ConStart" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="height:23px" />
                                    @*<input id="ConStart" type="date" style="color: #000000;width:100%" />*@
                                </td>
                                <td width="2%"></td>
                                <td>
                                    结束日期：
                                </td>
                                <td>
                                    @*<input id="ConEnd" type="date" style="color: #000000;width:100%" />*@
                                    <input id="ConEnd" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="height:23px" />
                                </td>
                                <td width="5%"></td>
                                <td>
                                    <ul class=" list-inline list-inline-extents">
                                        <li ng-click="QueryData('全部')" ng-class="{typeatcive: '全部' == SelectType}"><a href="#">全部</a></li>
                                        <li ng-click="QueryData('甲班')" ng-class="{typeatcive: '甲班' == SelectType}"><a href="#">甲班</a></li>
                                        <li ng-click="QueryData('乙班')" ng-class="{typeatcive: '乙班' == SelectType}"><a href="#">乙班</a></li>
                                        <li ng-click="QueryData('丙班')" ng-class="{typeatcive: '丙班' == SelectType}"><a href="#">丙班</a></li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="row" style="text-align: left; font-size: 24px;color: #4595ec; ">
                        <table>
                            <tr>
                                <td>
                                    本月-丙班
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div id="datatimetip" style="text-align: right; font-size: 12px; color: lightblue;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content exist-left" style="margin-left:5%">

        <div class="producerow">
            <div class="row" style="margin: 0px 0px 0px 0px; height: 100%;">
                <div class="col-xs-3" style="padding:0px;height:100%;width:100%;">
                    <div class="group" style="height: 100%; border-top: 1px solid lightblue; border-right: 1px solid lightblue; border-bottom: 1px solid lightblue; padding-top: 2px;">
                        <div id="MainChart" style="height:99%;width:99%">

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="producerow">
            <div class="row" style="margin:0px 0px 0px 0px;height:100%">
                <div class="col-xs-3" style="padding:0px;height:100%;width:100%;">
                    <div class="group" style="height: 100%; border-top: 1px solid lightblue; border-right: 1px solid lightblue; border-bottom: 1px solid lightblue; padding-top: 2px;">
                        <div id="MainChart1" style="height:99%;width:99%">

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

@section scripts{
    @Scripts.Render("~/bundles/chart");
    <script src="~/Areas/M/Scripts/QDLSD/JBProduceEfficiency_LMB.js"></script>

}
