            <div class="row" style="margin:0px 0px 0px 0px;height:100%;">
                <div id="SingleAnalysisChart3" style="height:100%;width:1000px">

                </div>
            </div>
        </div>*@
</div>


    @section scripts{
        @Scripts.Render("~/bundles/chart");

        <script src="~/Areas/M/Scripts/SingleItemAnalysis.js"></script>
