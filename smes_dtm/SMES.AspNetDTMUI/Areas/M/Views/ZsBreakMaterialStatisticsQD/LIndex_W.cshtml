@{
    Layout = "~/Areas/M/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Scripts.Render("/Content/datepicker");
    <link href="~/Areas/M/Styles/ZsBreakMaterialStatisticsQD.css" rel="stylesheet" />
}

<div id="main" style="width:100%;height:100%;margin:0px;padding:0px" ng-app="BreakMatApp" ng-controller="BreakMatCtl">
    <div class="module1 title">
        <div class="top-left">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="row">
                        <div class="col-xs-7">
                            制丝质量•断料统计
                        </div>
                        <div class="col-xs-5">
                            <div class="week">@ViewBag.Week</div>
                            <div id="datetimes" class="date">{{clock}}</div>
                            <div id="ProducteDate" class="date" style="display: none">@ViewBag.Date</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="top-right">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="pull-right" style="display:none">
                        <div class="form-group" style="font-size:small;padding-right:40px;">
                            <div class="col-xs-2" style="height:25px;padding:0px;margin-right:5px;text-align:right;vertical-align:middle;">开始日期</div>
                            <div class="col-xs-2" style="padding:0px;margin:0px;width:100px">
                                <input id="StartDate" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="width:100px;height:25px;" />
                            </div>

                            <div class="col-xs-2" style="height:25px;padding:0px;margin-right:5px;text-align:right;vertical-align:middle;">结束日期</div>
                            <div class="col-xs-2" style="padding:0px;margin:0px;width:100px;">
                                <input id="EndDate" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="width:100px;height:25px;" />
                            </div>

                            <div class="col-xs-1">
                                <button class="btn" ng-click="QueryData()" style="background-color:#214E85;border-radius:5px;width:60px;height:25px;padding:0px;vertical-align:middle;">查询</button>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="text-align: left; font-size: 24px;color: #4595ec; ">
                        <table>
                            <tr>
                                <td>
                                    本周
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div id="datatimetip" style="text-align: right; font-size: 12px; color: lightblue;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content1">
        <div class="producerow">
            <div class="col-xs-6" style="padding:0px;height:100%;border-right:2px solid #323337;">
                <div class="TitleBar">牌号断料次数统计(次)</div>
                <div id="Chart1" style="height:100%;">

                </div>
            </div>
            <div class="col-xs-6" style="padding:0px;height:100%;">
                <div class="TitleBar">牌号断料时间统计(min)</div>
                <div id="Chart2" style="height:100%;">

                </div>
            </div>
        </div>
        <div class="producerow">
            <div class="col-xs-6" style="padding:0px;height:100%;border-right:2px solid #323337;">
                <div class="TitleBar">各段断料次数统计(次)</div>
                <div id="Chart3" style="height:100%;">

                </div>
            </div>
            <div class="col-xs-6" style="padding:0px;height:100%;">
                <div class="TitleBar">各段断料时间统计(min)</div>
                <div id="Chart4" style="height:100%;">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/chart");
    <script src="~/Areas/M/Scripts/QDLSD/ZsBreakMaterialStatisticsQD_LW.js"></script>
}
