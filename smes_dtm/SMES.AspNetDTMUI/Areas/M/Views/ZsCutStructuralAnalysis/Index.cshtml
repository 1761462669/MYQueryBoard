@{
    Layout = "~/Areas/M/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Scripts.Render("/Content/datepicker");
    <link href="~/Areas/M/Styles/ZsCutStructuralAnalysis.css" rel="stylesheet" />
    }

<div style="width:100%;height:100%;margin:0px;padding:0px" ng-app="CutSAApp" ng-controller="CutSACtl">
    <div class="module1 title">
        <div class="top-left">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="row">
                        <div class="col-xs-8">
                            烟丝结构分析
                        </div>
                        <div class="col-xs-4">
                            <div class="week">@ViewBag.Week</div>
                            <div class="date">@ViewBag.Date</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="top-right">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="pull-right">
                        <div class="form-group" style="font-size:small;padding-right:40px;">
                            <div class="col-xs-2" style="height:25px;padding:0px;margin-right:5px;text-align:right;vertical-align:middle;">开始日期</div>
                            <div class="col-xs-2" style="padding:0px;margin:0px;width:100px">
                                <input id="StartDate" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="width:100px;height:25px;" />
                            </div>

                            <div class="col-xs-2" style="height:25px;padding:0px;margin-right:5px;text-align:right;vertical-align:middle;">结束日期</div>
                            <div class="col-xs-2" style="padding:0px;margin:0px;width:100px;">
                                <input id="EndDate" type="text" data-format="yyyy-MM-dd" class="form-control datepicker-here" style="width:100px;height:25px;" />
                            </div>

                            <div class="col-xs-1">
                                <button class="btn" ng-click="QueryData()" style="background-color:#214E85;border-radius:5px;width:60px;height:25px;padding:0px;vertical-align:middle;">查询</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content1">
        <div class="left-content">
            <div class="producerow" style="background-color:lightblue;">
                <div class="col-xs-6" style="padding:0px;height:100%;border-right:2px solid #323337;">
                    <div class="TitleBar">
                        <div style="display:table;width:100%;height:100%;">
                            <div style="display:table-cell;vertical-align:middle;width:100%;">
                                <select id="ParaList" style="color:lightblue;">
                                    <option value="917087">填充值</option>
                                    <option value="917088">碎丝率</option>
                                    <option value="917086">整丝率</option>
                                    <option value="917085">纯净度</option>
                                    <option value="627074">加香后水分</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div id="Chart1" style="height:100%;">

                    </div>
                </div>
                <div class="col-xs-6" style="padding:0px;height:100%;">
                    <div class="TitleBar">
                        <div style="display:table;width:100%;height:100%;">
                            <div style="display:table-cell;vertical-align:middle;width:100%;">

                            </div>
                        </div>
                    </div>
                    <div id="Chart2" style="height:100%;">

                    </div>
                </div>
            </div>
            
            <div class="producerow" style="margin:10px 0px 10px 0px;background-color:#bfb9b9;">
                <table class="table table-bordered table-striped" style="width:100%;text-align:center;color:black;padding:0px;margin:0px;">
                    <thead>
                        <tr class="locktop" style="height:50px;font:bold 700;background-color:#CCCCFF;">
                            <th style="width:15%;text-align:center;">牌号</th>
                            <th style="width:15%;text-align:center;">批次</th>
                            <th style="width:15%;text-align:center;">日期</th>
                            <th style="width:5%;text-align:center;">班组</th>
                            <th style="width:10%;text-align:center;">填充值(cm3/g)</th>
                            <th style="width:10%;text-align:center;">碎丝率(%)</th>
                            <th style="width:10%;text-align:center;">整丝率(%)</th>
                            <th style="width:10%;text-align:center;">纯净值(%)</th>
                            <th style="width:10%;text-align:center;">加香后水分(%)</th>
                        </tr>
                    </thead>
                </table>
                <div id="Scroll1" style="padding:0px;margin:0;">
                    <table class="table table-bordered table-striped" style="width:100%;text-align:center;color:black;">    
                        <tbody>
                            <tr ng-repeat="z in CutStructData">
                                <td style="height:30px;width:15%;">{{z.MAT}}</td>
                                <td style="width:15%;">{{z.LOT}}</td>
                                <td style="width:15%;">{{z.BUSSIDT}}</td>
                                <td style="width:5%;">{{z.TEAM}}</td>
                                <td style="width:10%;">{{z.TCZ}}</td>
                                <td style="width:10%;">{{z.SSL}}</td>
                                <td style="width:10%;">{{z.ZSL}}</td>
                                <td style="width:10%;">{{z.CJD}}</td>
                                <td style="width:10%;">{{z.SF}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                </div>
        </div>
        <div class="right-content">
            <div style="width:100%;height:70%;">
                <div class="group" style="height:100%;width:100%;padding:0px;background-color:#47B7DC;">
                    <div class="group-title" style="height:30px;background-color:#358AA6;border-bottom:2px solid #fff">
                        <div class="text" style="margin:0px;font-size:15px;font-weight:500">
                        <div style="width:4px;background-color:#fff;display:inline-block;height:14px;margin:0px 10px 0px 10px;"></div>烟丝牌号</div>
                    </div>
                    <div>
                        <ul id="Brandtree">
                            <li ng-repeat="x in CutBrandlist"><input type="checkbox" name="brand" checked="checked" value="{{x.ID}}" />{{x.NAME}}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div style="width:100%;height:30%;">
                <div class="group" style="height:100%;width:100%;padding:0px;background-color:#47B7DC;">
                    <div class="group-title" style="height:30px;background-color:#358AA6;border-bottom:2px solid #fff">
                        <div class="text" style="margin:0px;font-size:15px;font-weight:500">
                            <div style="width:4px;background-color:#fff;display:inline-block;height:14px;margin:0px 10px 0px 10px;"></div>班组
                        </div>
                    </div>
                    <div>
                        <ul id="Teamtree">
                            <li ng-repeat="y in Teamlist"><input type="checkbox" name="brand" checked="checked" value="{{y.ID}}" />{{y.NAME}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/chart");
    <script src="~/Areas/M/Scripts/ZsCutStructuralAnalysis.js"></script>
    
    }


