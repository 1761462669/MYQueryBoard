@{
    Layout = "~/Areas/M/Views/Shared/_Layout.cshtml";
}

@section styles{
    @Scripts.Render("/Content/datepicker");
    <link href="~/Areas/M/Styles/SingleItemAnalysisQD.css" rel="stylesheet" />
}

<div class="module1" ng-app="singleanalysisapp" ng-controller="singleanalysisctl">
    <div class="top-left">
        <div class="module1 title">
            <div style="display:table;width:100%;height:100%;">
                <div style="display:table-cell;vertical-align:middle;width:100%;">
                    <div class="row">
                        <div class="col-xs-7">
                            @ViewBag.Title
                        </div>
                        <div class="col-xs-5">
                            <div id="ProducteWeek" class="week">@ViewBag.Week</div>
                            <div id="ProducteDate" class="date">@ViewBag.Date</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="top-right">
        <div style="display:table;width:100%;height:100%;">
            <div style="display:table-cell;vertical-align:middle;width:100%;">
                <div class="row">
                    <table>
                        <tr>
                            <td width="5px"></td>
                            <td>
                                <label class="control-label" style="margin-left:0px;margin-right:10px;padding-left:0px;padding-right:0px;">月份</label>
                            </td>
                            <td>
                                <div  style="padding-left:0px;width:80px">
                                    <input id="QueryMonth" type="text" style="padding-left: 5px; padding-right: 10px; height: 23px;" data-format="yyyy-MM" class="form-control1 datepicker-here" />
                                </div>
                            </td>
                            <td width="5px"></td>
                            <td>
                                <label class="control-label" style="margin-left:0px;margin-right:10px;padding-left:0px;padding-right:0px;height:23px;">参数组</label>
                            </td>
                            <td>
                                <select class="form-control1" ng-options="x.PROCESSNAME for x in ProcessList" ng-change="QueryItems1(x)" ng-model="x" style="width: 300px; height: 23px;">
                                    <option value="">-请选择-</option>
                                </select>
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td width="5px"></td>
                            <td>
                                <label style="margin-left:0px;margin-right:10px;padding-left:0px;padding-right:0px;">缺陷等级</label>
                            </td>
                            <td>
                                <select class="form-control1" ng-options="y.DEFECTNAME for y in RankList" ng-change="QueryItems2(y)" ng-model="y" style="width: 80px; height: 23px;">
                                    <option value="">-请选择-</option>
                                </select>
                            </td>
                            <td width="5px"></td>
                            <td>
                                <label style="margin-left:0px;margin-right:10px;padding-left:0px;padding-right:0px;">缺陷项</label>
                            </td>
                            <td>
                                <select class="form-control1" ng-options="z.ITEMNAME for z in ItemList" ng-model="z" style="width: 300px; height: 23px;">
                                    <option value="">-请选择-</option>
                                </select>
                            </td>
                            <td>
                                <div  style="padding-left:30px;padding-right:0px;vertical-align:middle">
                                    <button  ng-click="QueryData()" style="background-color: #214E85; border-radius: 5px; width: 80px; height: 23px;">查询</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main-content1" id="MainContent">
    <div class="producerow">
        <div class="row" style="height:100%;margin-left:5px">
            <div id="SingleAnalysisChart1" style="margin:5px 10px 5px 10px;height:100%;width:100%">

            </div>
        </div>
    </div>
    @*<div class="producerow">
            <div class="row" style="margin:0px 0px 0px 0px;height:100%;">
                <div id="SingleAnalysisChart3" style="height:100%;width:1000px">

                </div>
            </div>
        </div>*@
</div>


@section scripts{
    @Scripts.Render("~/bundles/chart");

    <script src="~/Areas/M/Scripts/SingleItemAnalysisQD.js"></script>
}
