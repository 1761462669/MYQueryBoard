@{
    Layout = "~/Areas/M/Views/Shared/_Layout.cshtml";
}

@section styles{
    @*@Scripts.Render("/Content/datepicker");*@
    <link href="~/Areas/M/Styles/JBCJ_JBProductKB.css" rel="stylesheet" />
}
<script type="text/javascript">  

    var _PageHeight = document.documentElement.clientHeight,
          _PageWidth = document.documentElement.clientWidth;
    var _LoadingTop = _PageHeight > 61 ? (_PageHeight - 61) / 2 : 0,
        _LoadingLeft = _PageWidth > 215 ? (_PageWidth - 215) / 2 : 0;    
    var _LoadingHtml = '<div id="loadingDiv" style="position:absolute;left:0;width:100%;background:black;height:' + _PageHeight + 'px;top:0;opacity:0.8;filter:alpha(opacity=80);z-index:10000;"><div style="position: absolute; cursor1: wait; left: ' + _LoadingLeft + 'px; top:' + _LoadingTop + 'px; width: 100%; height: 100px; line-height: 150px; padding-left: 50px; padding-right: 5px; color: white;font: normal 20px/22px 宋体; font-family:\'Microsoft YaHei\';">页面加载中...</div></div>';
    
    document.write(_LoadingHtml);
    document.onreadystatechange = completeLoading;
    function completeLoading() {
        if (document.readyState == "complete") {
            var loadingMask = document.getElementById('loadingDiv');
            loadingMask.parentNode.removeChild(loadingMask);
        }
    }


</script>

<div ng-app="APP" ng-controller="CTRL" id="main" style="width:100%;height:100%;margin:0px;padding:0px">

    <div class="main-left">
        <div class="module3">
            <div class="title">生产看板</div>
        </div>
        <div class="module3">
            <div class="subtitle">
                <div style="text-align:center">{{shiftid}}&nbsp&nbsp&nbsp&nbsp{{teamid}}</div>
            </div>
        </div>
        <div class="module1">
            <div class="module1-top" id="monthproduct">
                {{monthproduct}}箱
            </div>
            <div class="module1-down" id="Month_Product"></div>
        </div>
        <div class="module1">
            <div class="module1-top" id="teamdayproduct">
                {{teamdayproduct}}箱
            </div>
            <div class="module1-down" id="Day_Product"></div>
        </div>
        <div class="module1">
            <div class="title-left2">
                <div style="align-content:center;height:99%;width:99%;">{{times_t}}</div>
                <div style="align-content:center;height:99%;width:99%;">{{times_w}}</div>
                <div style="align-content:center;height:99%;width:99%;">{{times_n}}</div>
            </div>
        </div>
    </div>

    <div class="main-right">
        <div class="module2">
            <div class="module2-top">
                <div>当班机台日产量</div>
            </div>
            <div class="module2-down">
                <div id="Team_Equ_Day_Product" style="height:99%;width:99%;"></div>
            </div>
        </div>

        <div class="module2">
            <div class="module2-top">
                <div>当月牌号产量</div>
            </div>
