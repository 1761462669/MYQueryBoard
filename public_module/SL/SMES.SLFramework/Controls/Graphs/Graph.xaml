<UserControl x:Class="SMES.Framework.Controls.Graphs.Graph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot"  MouseMove="pannel_MouseMove" MouseRightButtonDown="LayoutRoot_MouseRightButtonDown">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="pannel" >

                <Line Name="assistantLine" Stroke="Blue" StrokeThickness="1" Visibility="Visible"/>

            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
