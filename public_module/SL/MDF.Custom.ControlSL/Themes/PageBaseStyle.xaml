<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:smes="http://MDF.Custom.Controls/XAML"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <Style TargetType="smes:PageBase">
        <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="HeaderWidth" Value="130"></Setter>
        <Setter Property="Width" Value="1024"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="smes:PageBase">
                    <Grid Width="{TemplateBinding Width}" VerticalAlignment="Stretch" HorizontalAlignment="{TemplateBinding HorizontalAlignment}">
                        <smes:MDFLayoutGroupPanel HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HeaderWidth="{TemplateBinding HeaderWidthAuto}" Title="{TemplateBinding Title}" HeaderRightContent="{TemplateBinding HeaderRightContent}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </smes:MDFLayoutGroupPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
