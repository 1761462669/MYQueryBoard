<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:ctl="clr-namespace:MDF.Custom.ControlSL.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">


    <Style TargetType="ctl:MDF_RecyleControl">
        <Setter Property="Width" Value="64"></Setter>
        <Setter Property="Height" Value="64"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ctl:MDF_RecyleControl">
                    <Image x:Name="image" 
                           Margin="{TemplateBinding Margin}" 
                           Stretch="Fill" 
                           Width="{TemplateBinding Width}" 
                           Height="{TemplateBinding Height}" 
                           Source="{TemplateBinding Image}"
                           HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                           VerticalAlignment="{TemplateBinding VerticalAlignment}"
                           ></Image>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
