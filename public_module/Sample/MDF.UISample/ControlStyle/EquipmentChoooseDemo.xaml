<UserControl x:Class="MDF.UISample.ControlStyle.EquipmentChoooseDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bussiness="http://smes.bussiness.Controls/XAML"
    xmlns:custom="http://MDF.Custom.Controls/XAML"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <custom:MDFTextBox></custom:MDFTextBox>

            <bussiness:MDFEquipmentChooseControl SelectMode="Many">
                <bussiness:MDFEquipmentChooseControl.QueryEquipmentTypes>
                    <bussiness:QueryEquipmentType Value="187365"></bussiness:QueryEquipmentType>
                    <bussiness:QueryEquipmentType Value="187380"></bussiness:QueryEquipmentType>
                    <bussiness:QueryEquipmentType Value="187377"></bussiness:QueryEquipmentType>
                    <bussiness:QueryEquipmentType Value="187378"></bussiness:QueryEquipmentType>
                </bussiness:MDFEquipmentChooseControl.QueryEquipmentTypes>
            </bussiness:MDFEquipmentChooseControl>
            
            <custom:MDFComboEditor></custom:MDFComboEditor>
        </StackPanel>
        

    </Grid>
</UserControl>
